# top-most EditorConfig file
root = true

# all files
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 120

[*.{js,ts}]
quote_type = single
spaces_around_brackets = none
indent_brace_style = BSD KNF

# HTML
[*.html]
quote_type = double
